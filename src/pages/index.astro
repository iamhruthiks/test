import Card from "../components/Card.astro";
import Navbar from "../components/Navbar.astro";
import Background from "../../public/assets/background.svg";

<Layout title="Welcome to Kodecopter.">
	<Navbar />
	<main class="container d-flex flex-column justify-content-center text-center text-white mt-auto mb-auto">
		<div class="row justify-content-center">
			<div class="col-md-10 mt-5 p-4">
